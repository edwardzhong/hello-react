{
    "presets": [
        [ "@babel/preset-env", { "useBuiltIns": "entry" } ],
        "@babel/preset-react"
    ],
    "plugins": [
        "transform-react-pug",
        "@babel/transform-react-jsx",
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-transform-runtime",
        [
            "react-css-modules",
            {
                "exclude": "node_modules",
                "filetypes": {
                    ".scss": {
                        "syntax": "postcss-scss"
                    }
                },
                "context": "src/",
                "generateScopedName": "[path][name]_[local]_[hash:base64:5]"
            }
        ]
    ]
}